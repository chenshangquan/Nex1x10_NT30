<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<PageLogin>
	<VerticalLayout name="login" bkimage="res/login/login_bg.png">
		<HorizontalLayout height="81">
			<Button name="minbtn" float="true" pos="351,8,0,0" width="43" height="28" normalimage="res/login/min_normal.png" hotimage="res/login/min_hover.png" pushedimage="res/login/min_down.png"/>
			<Button name="closebtn" float="true" pos="394,8,0,0" width="43" height="28" normalimage="res/login/close_normal.png" hotimage="res/login/close_hover.png" pushedimage="res/login/close_down.png"/>
		</HorizontalLayout>
		
		<HorizontalLayout height="126">
			<Control width="36"/>
			<VerticalLayout>
				<Edit name="edtIP" width="286" height="42" tiptext="服务器地址" tiptextcolor="#ff787878" maxchar="32" textcolor="#ff000000" textpadding="17,0,0,0" font="0" normalimage="res/login/input_normal.png" focusedimage="res/login/input_selected.png" nativebkcolor="#ffffffff"/>
				<Edit name="edtUserName" width="286" height="42" tiptext="用户名" tiptextcolor="#ff787878" maxchar="32" textcolor="#ff000000" textpadding="17,0,0,0" font="0" normalimage="res/login/input_normal.png" focusedimage="res/login/input_selected.png"/>
				<Edit name="edtPassWord" width="286" height="42" tiptext="密码" tiptextcolor="#ff787878" maxchar="32" textcolor="#ff000000" textpadding="17,0,0,0" font="0" normalimage="res/login/input_normal.png" focusedimage="res/login/input_selected.png" password="true"/>
			</VerticalLayout>
			<Button name="LoginBtn" float="true" pos="328,85,0,0" width="86" height="40" normalimage="res/login/login_normal.png" hotimage="res/login/login_hover.png" pushedimage="res/login/login_down.png"/>
		</HorizontalLayout>
		
		<HorizontalLayout height="75">
			<Label name="LoginTipLeb" float="true" pos="60,3,0,0" width="400" height="14" text="账号与密码不匹配" textcolor="#fff3f3f3" font="0" align="left" gdiplus="true" visible="false"/>
			<Label float="true" pos="30,43,0,0" width="394" height="14" text="Copyrigh(c)2012-2019 苏州科达科技股份有限公司 V6.0.0.3.0" textcolor="#ff8e8d8d" font="0" align="center" gdiplus="false"/>
		</HorizontalLayout>
		
		<Case name="caseNormal">
			<LoginBtn enabled="true"/>
		</Case>
		<Case name="caseIsLogining">
			<LoginBtn enabled="false"/>
		</Case>
		
		<Case name="caseShowTip">
			<LoginTipLeb visible="true"/>
		</Case>
		<Case name="caseCloseTip">
			<LoginTipLeb visible="false"/>
		</Case>
	</VerticalLayout>
</PageLogin>